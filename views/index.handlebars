                    data-locale="auto"
                ></script>
                <script>
                    document.getElementsByClassName("stripe-button-el")[0].style.display = "none";
                </script>
                <button type="submit" class="btn btn-dark btn-lg text-white">Purchase for $25</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="/img/book.png" alt="" class="img-fluid">
        </div>
    </div>
